<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#1C6DBA" />
             <gradient  android:angle="-90"  android:startColor="#207AD1" android:endColor="#185FA2" />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#2388DB" />
             <solid  android:color="#2388DB"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#2388DB" />
             <gradient  android:angle="-90"  android:startColor="#3994EA" android:endColor="#207AD1" />            
         </shape>
     </item>
</selector>
